@{
    ViewData["Title"] = "Result Setup";
}

<div class="text-center">
    <h1 class="display-6">Result Setup</h1>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="class">Class</label>
                    </div>
                    <div class="col-md-9">
                        <select id="class" class="form-control">
                            <option>Loading...</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="student">Student</label>
                    </div>
                    <div class="col-md-9">
                        <select id="student" class="form-control">
                            <option>Please select class</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="subject">Subject</label>
                    </div>
                    <div class="col-md-9">
                        <select id="subject" class="form-control">
                            <option>Loading...</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="mark">Mark</label>
                    </div>
                    <div class="col-md-9">
                        <input id="mark" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div>
                <button id="Save" class="btn btn-primary" style="width: 100px;" onclick="page.save()"><i class="fa fa-floppy-o"></i> Save</button>
                <button class="btn btn-success" style="width: 100px;" onclick="page.clear()"><i class="fa fa-recycle"></i> Clear</button>
            </div>
        </div>
        <div class="col-md-6">
            <table id="result-list" class="data-list table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th colspan="3">Mark</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="6">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="/lib/Toastr/toastr.css" />
    <link rel="stylesheet" href="/lib/Toastr/toastr-responsive.css" />
    <link rel="stylesheet" href="/css/setup.css" />
}

@section Scripts {
    <script src="/lib/Toastr/toastr.js"></script>
    <script src="/js/result.js"></script>
}