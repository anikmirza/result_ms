@{
    ViewData["Title"] = "Class Setup";
}

<div class="text-center">
    <h1 class="display-6">Class Setup</h1>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="name">Name</label>
                    </div>
                    <div class="col-md-9">
                        <input id="name" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label for="section">Section</label>
                    </div>
                    <div class="col-md-9">
                        <input id="section" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div>
                <button id="Save" class="btn btn-primary" style="width: 100px;" onclick="page.save()"><i class="fa fa-floppy-o"></i> Save</button>
                <button class="btn btn-success" style="width: 100px;" onclick="page.clear()"><i class="fa fa-recycle"></i> Clear</button>
            </div>
        </div>
        <div class="col-md-6">
            <table id="class-list" class="data-list table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th colspan="3">Section</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="4">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="/lib/Toastr/toastr.css" />
    <link rel="stylesheet" href="/lib/Toastr/toastr-responsive.css" />
    <link rel="stylesheet" href="/css/setup.css" />
}

@section Scripts {
    <script src="/lib/Toastr/toastr.js"></script>
    <script src="/js/class.js"></script>
}